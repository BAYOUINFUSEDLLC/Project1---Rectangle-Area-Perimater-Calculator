    private void jTextFieldWidthActionPerformed(java.awt.event.ActionEvent evt) {                                                
        // Create a program termination
        
    }                                               

    private void jButtonCalcActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // declare variables
        double length, width, area, perimeter;
        // convert length and width from text to double
        length = Double.parseDouble(jTextFieldLength.getText());
        width = Double.parseDouble(jTextFieldWidth.getText());
        
        //Compute area and perimeter
        area = length * width;
        perimeter = length + length + width + width;
        
        // display the area and perimeter
        jTextFieldArea.setText(Double.toString(area));
        jTextFieldPerimeter.setText(Double.toString(perimeter));
    }                                           

    private void jButtonExitActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // add funtionality to exit button
        System.exit(0);
    }                                           

    private void jButtonClearActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // Add functionality to Clear button
        jTextFieldLength.setText("");
        jTextFieldWidth.setText("");
        jTextFieldArea.setText("");
        jTextFieldPerimeter.setText("");
    }                                            

